<?xml version="1.0" ?>
<sdf version="1.8">
  <world name="sticky_floor">

    <!-- ===== Physics: stable & deterministic ODE settings ===== -->
    <physics name="ode_stable" type="ode" default="true">
      <!-- 1 ms step keeps contacts stable without being too heavy -->
      <max_step_size>0.001</max_step_size>
      <real_time_update_rate>1000</real_time_update_rate>

      <ode>
        <solver>
          <type>quick</type>
          <iters>80</iters>          <!-- 60–120: higher = more stable, slower -->
          <sor>1.2</sor>             <!-- 1.0–1.3 typical -->
        </solver>

        <constraints>
          <cfm>1e-5</cfm>            <!-- small softness to avoid explosions -->
          <erp>0.2</erp>             <!-- contact error reduction -->
          <contact_max_correcting_vel>30.0</contact_max_correcting_vel>
          <contact_surface_layer>0.002</contact_surface_layer>
        </constraints>
      </ode>
    </physics>

    <gravity>0 0 -9.81</gravity>

    <!-- ===== Required Gazebo system plugins ===== -->
    <plugin
      filename="gz-sim-physics-system"
      name="gz::sim::systems::Physics">
    </plugin>
    <plugin
      filename="gz-sim-user-commands-system"
      name="gz::sim::systems::UserCommands">
    </plugin>
    <plugin
      filename="gz-sim-scene-broadcaster-system"
      name="gz::sim::systems::SceneBroadcaster">
    </plugin>
    <plugin
      filename="gz-sim-sensors-system"
      name="gz::sim::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
    <plugin
      filename="gz-sim-imu-system"
      name="gz::sim::systems::Imu">
    </plugin>

    <!-- ===== Lighting / visuals (optional but nice) ===== -->
    <scene>
      <ambient>0.5 0.5 0.5 1</ambient>
      <shadows>true</shadows>
    </scene>

    <!-- Sun from Gazebo Fuel -->
    <include>
      <uri>https://fuel.gazebosim.org/1.0/OpenRobotics/models/Sun</uri>
    </include>

    <!-- ===== Ground plane with grippy, isotropic friction ===== -->
    <include>
      <uri>https://fuel.gazebosim.org/1.0/OpenRobotics/models/Ground Plane</uri>
      <pose>0 0 0 0 0 0</pose>
    </include>

    <!-- Note: Ground friction properties are now set in the Ground Plane model itself -->
    <!-- You can override by creating a custom ground model if needed -->

  </world>
</sdf>
